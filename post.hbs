{{!< default}}

{{#post}}

<article class="{{post_class}} hens-post">
  <img src="{{image_url}}" title="{{{title}}}" alt="{{{title}}}" />
  <section class="hens-post-meta">
    <time class="hens-post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD, YYYY"}}</time>. <span
      class="hens-titlecase">{{tags}}</span>
  </section>
</article>

{{/post}}
